  <!-- cart drawer -->
  <aside id="cartDrawer" class="drawer" aria-hidden="true">
    <h3>Your cart</h3>
    <div id="cartList"></div>
    <div id="cartEmpty" class="muted center" style="display:none; padding:18px 0">Your cart is empty.</div>

    <div style="display:flex; justify-content:space-between; margin-top:12px; align-items:center">
